<view class="weui-cells__title">我的收藏</view>
<view class="weui-panel">
	<view class="weui-media-box" wx:for="{{prefers}}" wx:for-item='item' wx:key="index">
		<navigator url="/pages/product/detail?id={{item.product.id}}" class=" weui-media-box_appmsg" hover-class="weui-cell_active">
			<view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
				<view class="weui-badge">{{item.cart.num}}</view>
				<image class="weui-media-box__thumb" src="{{domain}}/{{item.product.pictures[0]}}" />
			</view>
			<view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
				<view class="weui-media-box__title">{{item.product.name}}</view>
				<view class="weui-media-box__desc">{{item.product.description}}</view>
				<view class="weui-media-box__desc"><label class="weui-cell_warn">{{item.product.average}}{{item.product.averageUnit}}</label></view>
			</view>
		</navigator>
		<view class="weui-cell__ft">
			<button type="default" size="mini" disabled="{{item.cart.num<=0}}" bindtap="subtractCount" id='{{index}}'>减</button>
			<button type="default" size="mini" disabled="true">
				<text class="weui-cell_warn">{{item.cart.num}}</text>
			</button>
			<button type="default" size="mini" bindtap="addCount" id="{{index}}">加</button>
		</view>
	</view>
</view>