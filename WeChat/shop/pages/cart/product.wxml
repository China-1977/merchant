<view class="weui-cells__title ">购物清单 - {{store.shortname}}</view>
<view class="weui-panel">
	<checkbox-group class="checkbox-group" name='index'>
		<block wx:for="{{products}}" wx:for-item='item' wx:key="index">
			<mp-slideview buttons="{{deleteCart}}" id="{{index}}" show="{{index==currentID}}" bindshow="bindShow" bindbuttontap="bindButtonTap">
				<view class="weui-media-box">
					<view class=" weui-media-box_appmsg">
						<view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
							<view class="weui-badge">{{item.cart.num}}</view>
							<image class="weui-media-box__thumb" src="{{domain}}/{{item.product.pictures[0]}}" />
						</view>
						<view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
							<view class="weui-media-box__title">{{item.product.name}}</view>
							<view class="weui-media-box__desc">{{item.product.description}}</view>
							<view class="weui-media-box__desc"><label class="weui-cell_warn">{{item.product.average}}{{item.product.averageUnit}}</label></view>
						</view>
					</view>
					<view class="weui-flex">
						<label class="checkbox">
							<checkbox value="{{item.cart.id}}" checked="{{item.cart.checked}}" bindtap="checkedChange" data-index="{{index}}" />
						</label>
						<view class="weui-flex__item weui-cell__ft">
							<button type="default" size="mini" bindtap="subtractCount" id="{{index}}">减</button>
							<button type="default" size="mini" disabled="true">{{item.cart.num}}</button>
							<button type="default" size="mini" bindtap="addCount" id="{{index}}">加</button>
						</view>
					</view>
				</view>
			</mp-slideview>
		</block>

	</checkbox-group>
</view>
<view style="height:230rpx"></view>

<view class="weui-cells weui-flex  weui-footer weui-footer_fixed-bottom" style="z-index:100">
	<view class='weui-flex__item weui-cell'>
		<view class="weui-cell__hd">
			<switch class="checkbox" type='checkbox' bindchange="switchChange" checked="{{checkAll}}" />全选
		</view>
		<view class="weui-cell__bd"></view>
		<view class='weui-cell__ft'>合计：<text style='color:red'>{{sum}}</text>元</view>
	</view>
	<navigator class="weui-cell" url='/pages/cart/confirm'>
		<button type="primary" size="mini" disabled='{{sum <= 0.00}}'>立即下单</button>
	</navigator>
</view>