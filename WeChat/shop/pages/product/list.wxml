<navigator class="weui-cells__title  " url="/pages/store/detail">
    <view class="weui-cell__ft_in-access">门店：{{store.shortname}}</view>
</navigator>
<view class="weui-panel weui-media-box">
    <block wx:for="{{products}}" wx:for-item='item' wx:key="index">
        <checkbox-group>
            <navigator url="/pages/product/detail?id={{item.product.id}}&index={{index}}" class=" weui-media-box_appmsg" hover-class="weui-cell_active">
                <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                    <view class="weui-badge">{{item.cart.num}}</view>
                    <image class="weui-media-box__thumb" src="{{domain}}/{{item.product.pictures[0]}}" />
                </view>
                <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                    <view class="weui-media-box__title">{{item.product.name}}</view>
                    <view class="weui-media-box__desc">{{item.product.description}}</view>
                    <view class="weui-media-box__desc">
                        <label class="weui-cell_warn">单价:{{item.product.average}}{{item.product.averageUnit}}</label>
                    </view>
                </view>
            </navigator>
            <view class="weui-flex">
                <label class="checkbox" wx:if="{{item.cart}}">
                    <checkbox value="{{item.cart.id}}" checked="{{checkAll||item.cart.checked}}" bindtap="checkedChange" data-index="{{index}}" />
                </label>
                <view class="weui-flex__item weui-cell__ft">
                    <button type="default" size="mini" disabled="{{item.cart.num<=0}}" bindtap="subtractCount" id="{{index}}">减</button>
                    <button type="default" size="mini" disabled="true"><text class="weui-cell_warn">{{item.cart.num}}</text></button>
                    <button type="default" size="mini" bindtap="addCount" id="{{index}}">加</button>
                </view>
            </view>
        </checkbox-group>
    </block>
</view>
<view style="height:230rpx">
</view>
<view class="weui-cells weui-flex  weui-footer weui-footer_fixed-bottom">
    <view class='weui-flex__item weui-cell'>
        <view class="weui-cell__hd">
            <switch class="checkbox" type='checkbox' bindchange="switchChange" checked="{{checkAll}}" />全选
        </view>
        <view class="weui-cell__bd"></view>
        <view class='weui-cell__ft'>合计：<text style='color:red'>{{sum}}</text>元</view>
    </view>
    <navigator class="weui-cell" url='/pages/cart/confirm'>
        <button type="primary" size="mini" disabled="{{sum <= 0.00}}">立即下单</button>
    </navigator>
</view>